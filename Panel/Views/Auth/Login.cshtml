
@{
      ViewData["Title"] = $" ورود";
}

<div class="jumbotron">
    <p class="text-red text-center">Login info</p>
    <p class="text-center"><span class="text-aqua ">UserName for Manager Is :</span> Manager</p>
    <p class="text-center"><span class="text-aqua">UserName for Employee Is :</span> Employee</p>
</div>

<div class="box box-primary">
    <div class="box-header">
        <h3 class="box-header text-center">
            <span class="text-warning">
                @ViewData["Title"]
            </span>
        </h3>
        <hr />
    </div>
    <div class="box-body">

        <div class="row">
            <div class="col-md-4">
                <form method="post" >
                    <input type="hidden" value="@ViewBag.RedirectUrl" name="RedirectUrl" /> 
                    <div class="form-group">
                        <label for="username" class="control-label">نام کاربری</label>
                        <input name="username" id="username" class="form-control" placeholder="نام کاربری"/>

                    </div>

                    <div class="form-group">
                        <input type="submit" value="ورود" class="btn btn-success  btn-block" />
                    </div>
                </form>
                <p class="text-warning">@ViewBag.msg</p>
            </div>
        </div>
    </div>
</div>


