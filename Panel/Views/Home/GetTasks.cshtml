@model IEnumerable<DAL.Models.TaskItem>

@{

    ViewData["Title"] = "لیست تسک ها";
}


<div class="box box-primary">
    <div class="box-header">
        <h3 class="box-header text-center">
            <span class="btn btn-warning">
                @ViewData["Title"]
                <span class="badge bg-aqua">
                </span>
            </span>
        </h3>
        <hr />
        <div class="col-lg-12">
            <div class="col-lg-1">
                <a asp-action="AddTask" class="btn btn-microsoft "> افزودن تسک <i class="fa fa-plus"></i></a>
            </div>

        </div>
        <div class="col-lg-12">
            <hr />
        </div>
    </div>
    <div class="box-body">
        <div class="table-responsive">
            <table class="table table-bordered table-condensed table-hover table-striped text-center">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Description)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Statuse)
                        </th>

                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Statuse)
                            </td>
                            <td>
                                @if (User.IsInRole(DAL.Rol.Manager.ToString()))
                                {
                                    <a asp-action="Updatetask" class="btn btn-sm btn-warning" asp-route-TaskItemId="@item.Id">تغییر وضعیت</a>
                                }
                                | <a asp-action="GetSubTasks" class="btn btn-sm btn-info" asp-route-TaskItemId="@item.Id">لیست ساب تسک ها</a>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
