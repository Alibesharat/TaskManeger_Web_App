@model DAL.Models.TaskItem

@{
    ViewData["Title"] = $" بروز رسانی وضعیت ";
}


<div class="box box-primary">
    <div class="box-header">
        <h3 class="box-header text-center">
            <span class="btn btn-warning">
                @ViewData["Title"]
            </span>
        </h3>
        <p>
            @Model.Description

        </p>
        <hr />
    </div>
    <div class="box-body">
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Updatetask">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />

                    <div class="form-group">
                        <label asp-for="Statuse" class="control-label"></label>
                        <select asp-for="Statuse" class="form-control" asp-items="@Html.GetEnumSelectList<DAL.Statuse>()">
                        </select>
                        <span asp-validation-for="Statuse" class="text-danger"></span>
                    </div>


                    <div class="form-group">
                        <input type="submit" value="ذخیره" class="btn btn-warning btn-block" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<div>
    <a class="btn btn-danger" asp-action="Index">بازگشت به لیست</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
